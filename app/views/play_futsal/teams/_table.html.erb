<%# assumes `team` variable exists %>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th># Athletes</th>
      <% if admin? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>
  
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team_path(team) %></td>
        <td><%= team.athletes.count %></td>
        <% if admin? %>
          <td><%= link_to 'Edit',   edit_team_path(team) %></td>
          <td><%= link_to 'Delete', team_path(team), :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>