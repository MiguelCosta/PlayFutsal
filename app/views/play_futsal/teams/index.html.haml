%h1 Listing Teams
%table
  %thead
    %tr
      %th Name
  %tbody
    - @teams.each do |team|
      %tr
        %td
          = team.name
      %td
        = link_to 'Show', team_path(team)
      %td
        = link_to 'Edit', edit_team_path(team)
      -# %td
        = link_to 'Destroy', team_path(team), :method => :delete, :data => { :confirm => 'Are you sure?' }
%br
= link_to 'New Team', new_team_path