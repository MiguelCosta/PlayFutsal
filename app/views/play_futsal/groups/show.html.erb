<%= content_for :title do "Group - #{@group.name}" end %>

<div class="well">
  <h3>Group Stats</h3>
  <%= render 'group', :group => @group %>

  <hr />
  <h3>Match List</h3>
  <%= render 'play_futsal/matches/table', :matches => @group.matches %>

  <% if admin? %>
    <div class='actions'>
      <%= link_to 'Edit', edit_group_path(@group), :class => :btn %>
      <%= link_to 'Delete', group_path(@group), :method => :delete, :class => :btn %>
    </div>
  <% end %>
</div>
