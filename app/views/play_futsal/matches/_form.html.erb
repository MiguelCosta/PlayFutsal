<%= form_for @match do |f| %>
  <% if @match.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@match.errors.count, 'error') %> prohibited this post from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :desc %>
    <%= f.text_field :desc %>
  </div>

  <div class='field'>
    <%= f.label :date %>
    <%= f.datetime_select 'datetime' %>

  <div class='field'>
    <%= f.label :home_team %>
    <%= collection_select :match, :home_team_id, @teams, :id, :name %>
  </div>

  <div class='field'>
    <%= f.label :away_team %>
    <%= collection_select :match, :away_team_id, @teams, :id, :name %>
  </div>

  <div class='form-actions'>
    <%= f.submit 'Save' %>
    <%= link_to 'Back', :back %>
  </div>
<% end %>