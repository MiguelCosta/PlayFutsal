<%# assumes `match` variable exists %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Date/Time</th>
      <% if admin? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% matches.each do |match| %>
      <tr>
        <td><%= link_to match.to_s, match_path(match) %></td>
        <td><%= match.datetime.to_formatted_s :short unless match.datetime.nil? %></td>
        <% if admin? %>
          <td><%= link_to 'Edit',   edit_match_path(match) %></td>
          <td><%= link_to 'Delete', match_path(match), :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
