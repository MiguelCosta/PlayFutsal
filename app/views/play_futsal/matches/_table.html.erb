<%# assumes `match` variable exists %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Home</th>
      <th></th>
      <th>Away</th>
      <th>Date/Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% matches.each do |match| %>
      <tr>
        <td><%= link_to match.desc, match_path(match) %></td>
        <td><%= link_to match.home.team.name, match.home.team %></td>
        <td>vs</td>
        <td><%= link_to match.away.team.name, match.away.team %></td>
        <td><%= match.datetime.to_formatted_s :short unless match.datetime.nil? %></td>
        <td><%= link_to 'Edit',   edit_match_path(match) %></td>
        <td><%= link_to 'Delete', match_path(match), :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>