<h2>Edit Match <%= @match.desc %></h2>

<%= form_for @match do |f| %>
  <% if @match.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@team.errors.count, 'error') %> prohibited this post from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label :home_team %>
