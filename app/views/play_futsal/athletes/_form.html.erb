<%= form_for @athlete do |f| %>
  <% if @athlete.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@athlete.errors.count, 'error') %> prohibited this post from being saved:</h2>

      <ul>
      <% @athlete.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
