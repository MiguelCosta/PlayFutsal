<%= content_for :title do 'Phases' end %>

<div class="hero-unit">
  <% @phases.each do |phase| %>
    <h3><%= phase.name %></h3>
    <%= render :partial => 'phase', :locals => { :phase => phase } %>
  <% end %>

  <% if admin? %>
    <%= link_to 'New Phase', new_phase_path, :class => :btn %>
  <% end %>
</div>